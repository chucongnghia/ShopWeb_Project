@{
    ViewData["Title"] = "Top Up";
    Layout = "~/Views/Shared/_LayoutOgani.cshtml";
}

<section class="spad">
    <div class="container">
        <h3 style="margin-bottom:16px;">Top up balance</h3>
        <form asp-action="TopUp" asp-controller="User" method="post">
            <div class="form-group" style="max-width:320px;">
                <label>Amount</label>
                <input class="form-control" type="number" name="amount" step="1" min="1" required />
                <span class="text-danger">@Html.ValidationMessage("amount")</span>
            </div>
            <button class="site-btn" type="submit">Add funds</button>
        </form>
    </div>
</section>


