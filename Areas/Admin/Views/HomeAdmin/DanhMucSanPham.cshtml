@using ShopWeb_Project.Models
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TDanhMucSp>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "DanhMucSanPham";
    Layout = "~/Areas/Admin/Views/_LayoutAdmin.cshtml";
}

<h3>Danh mục sản phẩm</h3>
<p>
    <a asp-action="ThemSanPhamMoi">Thêm sản phẩm mới</a>
</p>
<p>
    @TempData["Message"]
</p>

<table class="table">
    <thead>
        <tr class="table-light">
            <th>
                Tên sản phẩm
            </th>
            <th>
                Cân nặng
            </th>
            <th>
                Độ nới
            </th>
            <th>
                Thời gian bảo hành
            </th>
            <th>
                Chiết khấu
            </th>
            <th>
                Giá nhỏ nhất
            </th>
            <th>
                Giá lớn nhất
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
@foreach (var item in Model) {
            
            <tr class="table-light">
            <td>
                @Html.DisplayFor(modelItem => item.TenSp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanNang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoNoi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiGianBaoHanh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChietKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaNhoNhat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaLonNhat)
            </td>
            <td>
                <a asp-action="ChinhSuaSanPham" asp-route-maSanPham="@item.MaSp">Chỉnh sửa</a> |
                <a asp-action="ChiTietSP" asp-route-maSanPham="@item.MaSp">Chi tiết</a> |
                <a asp-action="XoaSanPham" asp-route-maSanPham="@item.MaSp">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
@Html.PagedListPager(Model, page => Url.Action("DanhMucSanPham", new { page = page }), new
    X.PagedList.Mvc.Core.PagedListRenderOptions()
{       LiElementClasses=new List<string>(){"page-item"},
        PageClasses = new List<string>() { "page-link" }

})
